#!/usr/bin/env bash

set -e

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

cd "$DIR/../frontend"

NODE_ENV=production docker build --build-arg GOOGLE_ANALYTICS_ID_ARG=$GOOGLE_ANALYTICS_ID -t gcr.io/gradientzoo-1233/gradientzoo-web:latest .
gcloud docker push gcr.io/gradientzoo-1233/gradientzoo-web:latest