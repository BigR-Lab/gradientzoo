#!/usr/bin/env bash

set -e

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

source "$DIR/env"

cd "$DIR/../frontend"

NODE_ENV=production docker build --build-arg GOOGLE_ANALYTICS_ID_ARG=$GOOGLE_ANALYTICS_ID -t gcr.io/$PROJECT_NAME/gradientzoo-web:latest .
gcloud docker push gcr.io/$PROJECT_NAME/gradientzoo-web:latest